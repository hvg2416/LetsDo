<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.developerhvg.letsdoit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.developerhvg.letsdoit.MainActivity"></activity>
        <activity android:name="com.developerhvg.letsdoit.PrivateTaskCredentialActivity" />
        <activity android:name="com.developerhvg.letsdoit.PrivateTaskActivity" />
        <activity android:name="com.developerhvg.letsdoit.EditTaskActivity" />
        <activity android:name="com.developerhvg.letsdoit.NewTaskActivity" />
        <activity android:name="com.developerhvg.letsdoit.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>